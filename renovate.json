{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "automerge": true,
    "automergeType": "branch",
    "packageRules": [
        {
            "description": "Disable updates for MSBuild as we target lowest version supported by Microsoft. See https://learn.microsoft.com/en-us/dotnet/core/porting/versioning-sdk-msbuild-vs for more details.",
            "matchPackagePatterns": [
                "Microsoft.Build.Framework",
                "Microsoft.Build.Utilities.Core"
            ],
            "matchUpdateTypes": ["major", "minor"],
            "enabled": false
        }
    ],
    "customManagers": [
        {
            "description": "Update the GitHub Actions runners.",
            "customType": "regex",
            "managerFilePatterns": [
                ".github/workflows/*.yml"
            ],
            "matchStrings": [
                "(?<depName>macos|ubuntu|windows)-(?<currentValue>[-\\w.\\d]+)"
            ],
            "datasourceTemplate": "github-runners"
        },
        {
            "description": "Update PowerShell modules (VerifyEncoding).",
            "customType": "regex",
            "fileMatch": [
                "^\\.github/workflows/.+\\.yml$",
                "CONTRIBUTING.md"
            ],
            "matchStrings": [
                "Install-Module (?<depName>\\S+?) -RequiredVersion (?<currentValue>\\S+)"
            ],
            "datasourceTemplate": "nuget",
            "registryUrlTemplate": "https://www.powershellgallery.com/api/v2/"
        }
    ]
}
